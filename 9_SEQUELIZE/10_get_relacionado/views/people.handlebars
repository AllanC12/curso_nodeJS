<h2>Endereço usuário {{people.id}}</h2>
{{#each people}}
  <h2>{{this.name}}</h2>
  <p>{{this.occupation}}</p>
{{/each}}

{{#each people.Addresses}}
  <div class="address_wraper">
    <h2>{{this.street}} - {{this.city}} - {{this.number}}</h2>
    <form action="/address/delete" method="POST">
      <input type="hidden" name="id" value={{this.id}} />
      <input type="hidden" name="userId" value={{this.PersonId}} />
      <input type="submit" value="Excluir endereço" />
    </form>
  </div>

{{/each}}
<a href="/person/{{this.id}}">Adicionar endereço</a>
<a href="/add_person">Cadastrar pessoas</a>